{% extends '::base.html.twig' %}

{% block page %}
        <div class="row">
          <div class="col-lg-12">
            <h1>Tichet {{form.vars.value.ticketCreate.id}} <small>Rezolvare</small></h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('ticket_details', {'id' : form.vars.value.ticketCreate.id}) }}"><i class="icon-dashboard"></i> Tichet {{form.vars.value.ticketCreate.id}}</a></li>
              <li class="active"><i class="icon-file-alt"></i> Completare mod rezolvare</li>
            </ol>
          </div>
        </div><!-- /.row -->

	{{ form_start(form, {'attr': {'class':'breadcrumb'}}) }}
        {{ form_errors(form) }}

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.fixedBy) }}
                {{ form_widget(form.fixedBy, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                {{ form_label(form.compartment) }}
                {{ form_widget(form.compartment, {'attr': {'class': 'form-control', 'placeholder': 'Introduceti compartimentul'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.resolvedAt) }}
                {{ form_widget(form.resolvedAt) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
			<div class="form-group">
				{{ form_label(form.obs) }}
				{{ form_widget(form.obs, {'attr': {'class': 'form-control', 'placeholder':'se vor enumera atat activitatile efectuate, cat si rezultatul verificarii/testarii'}}) }}
			</div>
            <div class="form-group">
                {{ form_label(form.resources) }}
                {{ form_widget(form.resources, {'attr': {'class': 'form-control', 'placeholder':'se vor mentiona atat resursele utilizate, cat si destinatia pieselor de schimb, subansamblelor si consumabilelor rezultate prin inlocuire (la client sau la TELETRANS), cu identificarea acestora prin denumire si serie dupa caz'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <div class="form-group">
                {{ form_label(form.isReal) }}
                {{ form_widget(form.isReal, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="col-lg-10">
			{% if form.notAffectedReason is defined %}
				<div class="form-group">
					{{ form_label(form.notAffectedReason) }}
					{{ form_widget(form.notAffectedReason, {'attr': {'class': 'form-control', 'placeholder':'Motivati de ce nu a afectat vreun sistem'}}) }}
				</div>			
			{% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
			{{ form_widget(form.salveaza, {'attr': {'class': 'btn btn-primary'}}) }}
			{{ form_widget(form.reseteaza, {'attr': {'class': 'btn btn-default'}}) }}
        </div>
    </div>
			
			{{ form_rest(form) }}
		{{ form_end(form) }}

{% endblock %}