{% extends '::base.html.twig' %}

{% block page %}

    <div class="row">
        <div class="col-lg-12">
            <h1>Sesizanti <small>Confirmare</small></h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('tlt_admin_announcers_index') }}"><i class="icon-dashboard"></i> Sesizanti</a></li>
                <li class="active"><i class="icon-file-alt"></i> Confirmare</li>
            </ol>
        </div>
    </div><!-- /.row -->


    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>

        {% if action == 'add' %}
            Actiunea de <strong>salvare</strong> s-a incheiat cu <strong>succes</strong>. <a href="{{ path('tlt_admin_announcers_add') }}" class="alert-link">[ Adaugati ]</a> un nou sesizant sau reveniti la lista <a href="{{ path('tlt_admin_announcers_index') }}"  class="alert-link">[ sesizantilor ]</a>.
        {% else %}
            Actiunea de <strong>editare</strong> s-a incheiat cu <strong>succes</strong>. Reveniti la lista <a href="{{ path('tlt_admin_announcers_index') }}"  class="alert-link">[ sesizantilor ]</a>.
        {% endif %}
    </div>

{% endblock %}


