{% extends '::base.html.twig' %}

{% block page %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Sisteme <small>Detalii</small></h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_systems_index') }}"><i class="icon-dashboard"></i> Sisteme</a></li>
                <li class="active"><i class="icon-file-alt"></i> Detalii</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> {{ system.name }}</h3>
                </div>
                <div class="panel-body">
                    <div id="morris-chart-area">
                        <div class="col-lg-6">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <i class="fa fa-check fa-5x"></i>
                                        </div>
                                        <div class="col-xs-6 text-right">
                                            <p class="announcement-heading">{{ unitsNo }}</p>
                                            <p class="announcement-text">Unitati</p>
                                        </div>
                                    </div>
                                </div>
                                <a href="#">
                                    <div class="panel-footer announcement-bottom">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                Nr total de echipamente / utilizatori care afecteaza sistemul
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="panel panel-danger">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-tasks fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            <p class="announcement-heading">{{ indisponibleTime|default(0) }}</p>
                                            <p class="announcement-text">Minute</p>
                                        </div>
                                    </div>
                                </div>
                                <a href="#">
                                    <div class="panel-footer announcement-bottom">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                Timp total de indisponibilitate din semestrul curent
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}