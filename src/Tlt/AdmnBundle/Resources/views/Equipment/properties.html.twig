{% if equipment.getPropertiesValues is not empty %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Properietati</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped tablesorter">
                            {% for pv in equipment.getPropertiesValues %}
                                <tr>
                                    <th class="text-left">{{pv.getProperty.name}}</th>
                                    <td colspan="3">
                                        {{pv.value}}
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div><!-- /.table-responsive -->
                </div><!-- /.panel-body -->
            </div><!-- /.panel -->
        </div><!-- /.col-lg-12 -->
    </div><!-- /.row -->
{% endif %}