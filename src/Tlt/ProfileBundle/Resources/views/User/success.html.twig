{% extends '::base.html.twig' %}

{% block page %}

    <div class="row">
        <div class="col-lg-12">
            <h1>Profil utilizator  <small>Editare</small></h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}"><i class="icon-dashboard"></i> Prima pagina</a></li>
                <li class="active"><i class="icon-file-alt"></i> Confirmare</li>
            </ol>
        </div>
    </div><!-- /.row -->


    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>

        {% if action == 'add' %}
            Actiunea de <strong>salvare</strong> s-a incheiat cu <strong>succes</strong>. Reveniti la lista <a href="{{ path('tlt_profile_user_index') }}"  class="alert-link">[ utilizatorilor ]</a>.
        {% elseif action == 'edit' %}
            Actiunea de <strong>editare</strong> s-a incheiat cu <strong>succes</strong>. Reveniti la lista <a href="{{ path('tlt_profile_user_index') }}"  class="alert-link">[ utilizatorilor ]</a>.
        {% elseif action == 'delete' %}
            Actiunea de <strong>stergere</strong> s-a incheiat cu <strong>succes</strong>. Reveniti la lista <a href="{{ path('tlt_profile_user_index') }}"  class="alert-link">[ utilizatorilor ]</a>.
        {% elseif action == 'chpwd' %}
                Actiunea de <strong>schimbare a parolei</strong> s-a incheiat cu <strong>succes</strong>.
        {% endif %}
    </div>

{% endblock %}