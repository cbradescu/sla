{% extends '::base.html.twig' %}

{% block page %}
    <div class="row no-print">
        <div class="col-lg-12">
            <h1>Detalii indisponibilitate</h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}"><i class="icon-dashboard"></i> Prima pagina</a></li>
                <li class="active"><i class="icon-file-alt"></i>Rapoarte</li>
            </ol>
        </div>
    </div><!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista tichetelor care au generat indisponibilitatea sistemului <strong>{{ system.name }}</strong>
                </div><!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th nowrap class="text-right">Nr tichet</th>
                                    <th>Anunta la</th>
                                    <th>Rezolvat la</th>
                                    <th class="text-right">Minute indisponibile</th>
                                    <th>Descriere</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ticket in tickets %}
                                    <tr>
                                        <td class="text-right">{{ ticket.id }}</td>
                                        <td nowrap>{{ ticket.announcedAt|date('Y-m-d h:i') }}</td>
                                        <td nowrap>{{ ticket.fixedAt|date('Y-m-d h:i') }}</td>
                                        <td class="text-right">{{ ticket.getIndiponibleTimeForSystem(system) }}</td>
                                        <td><a href="{{ path('ticket_details', {'id':ticket.id}) }}">{{ ticket.description }}</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}